.checkbox
  display block
  padding-left 1.78rem
  cursor pointer
  position relative

  input
    visibility hidden
    position absolute
    top 0
    left 0

    &:checked
      & + span
        &:before
          //:local //ошибка webpack, через сборку в глобальной области видимости не собирается, поэтому ставим :local
          // закоменчено, потому что checkbox глобально не импортируется
          background #fff url(checkbox-arrow.png) no-repeat center
          background-size 75% auto

  span
    display inline-block
    border-bottom 1px dashed $link-color
    color $link-color
    line-height 1

    &:before
      content ""
      display block
      width 1.22rem
      height 1.22rem
      position absolute
      top 50%
      left 0
      margin-top -.61rem
      background #fff
      border 1px solid #599dd4

  &:hover
    span
      border-color $link-hover-color
      color $link-hover-color

      &:before
        border-color: #66afe9
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)

  &--big
    @extend .checkbox
    display block
    cursor pointer
    position relative
    padding-left 2.71rem

    & > span
      border 0
      color #000

      &:before
        width 1.86rem
        height 1.86rem
        margin-top -.93rem

        +below($media-screen-sm)
          top 0
          margin-top 0
